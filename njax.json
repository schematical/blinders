{
    "app_name":"blinders",
    "frameworks":{
        "angular":"angular",
        "ionic":"ionic"
    },
    "models":{
        "option":{
            "uri_prefix":"/options",
            "parent":"product",
            "fields":{
                "namespace":"namespace",
                "name":"string",
                "desc":"md",
                "product":{
                    "type":"ref",
                    "ref":"product",
                    "bootstrap_populate":"req.product"
                },
                "carbs":"number",
                "calories":"number",
                "points":"number"

            }
        },
        "product":{
            "uri_prefix":"/products",
            "parent":"restaurant",
            "fields":{
                "namespace":"namespace",
                "name":"string",
                "desc":"md",
                "restaurant":{
                    "type":"ref",
                    "ref":"restaurant",
                    "bootstrap_populate":"req.restaurant"
                },
                "carbs":"number",
                "calories":"number",
                "points":"number"

            }
        },
        "restaurant":{
            "uri_prefix":"/restaurants",
            "fields":{
                "namespace":"namespace",
                "name":"string",
                "desc":"md"
            }
        }
    },
    "bowser":{
        "dependencies":{
            "fontawesome":"*"
        }
    },
    "package":{
        "dependencies":{
            "gm":"*",
            "mkdirp":"*",
            "canvas":"*",
            "hogan.js":"*",
            "aws-sdk":"*",
            "request":"*"
        }
    }
}